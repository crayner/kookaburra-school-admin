{% trans_default_domain 'SchoolAdmin' %}

{% extends 'kookaburra.html.twig' %}

{% set moduleName = 'School Admin' %}
{% set module = {
    baseURL: 'school_admin',
    crumbs: [
        {uri: 'school_admin__academic_year_manage', name: 'School Admin'},
        {uri: 'school_admin__attendance_settings', name: 'Attendance Settings'},
    ],
    title: (code.id > 0 ? 'Edit Attendance Code' : 'Add Attendance Code'), domain: 'SchoolAdmin'} %}
{% set breadcrumbs = 'new' %}

{% block content %}
    <h3>
    <button class="close-button gray" title="{{ 'Return'|trans({}, 'messages') }}" type="button" onClick="window.open('{{ path('school_admin__attendance_settings') }}','_self')"><span class="fas fa-reply fa-fw"/></button>
    <button class="close-button gray" title="{{ 'Add'|trans({}, 'messages') }}" type="button" onClick="window.open('{{ path('school_admin__attendance_code_add') }}','_self')"><span class="fas fa-plus-circle fa-fw"/></button>{{ (code.id > 0 ? 'Edit Attendance Code' : 'Add Attendance Code')|trans }}</h3>
    <div id="formContent"></div>
{% endblock content %}
