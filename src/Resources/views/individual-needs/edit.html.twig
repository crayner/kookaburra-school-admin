{% trans_default_domain 'SchoolAdmin' %}

{% extends 'kookaburra.html.twig' %}

{% set moduleName = 'School Admin' %}
{% set module = {
    baseURL: 'school_admin',
    crumbs: [
        {uri: 'school_admin__academic_year_manage', name: 'School Admin'},
        {uri: 'school_admin__in_manage', name: 'Individual Needs'},
    ],
    title: (need.id > 0 ? 'Edit Individual Need' : 'Add Individual Need'), domain: 'SchoolAdmin'} %}
{% set breadcrumbs = 'new' %}

{% block content %}
    <h3>
    <button class="close-button gray" title="{{ 'Return'|trans({}, 'messages') }}" type="button" onClick="window.open('{{ path('school_admin__in_manage') }}','_self')"><span class="fas fa-reply fa-fw"/></button>
    <button class="close-button gray" title="{{ 'Add'|trans({}, 'messages') }}" type="button" onClick="window.open('{{ path('school_admin__in_add') }}','_self')"><span class="fas fa-plus-circle fa-fw"/></button>{{ (need.id > 0 ? 'Edit Individual Need' : 'Add Individual Need')|trans }}</h3>
    <div id="formContent"></div>
{% endblock content %}
